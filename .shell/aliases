# https://pypi.python.org/pypi/ripdb
alias ripdb='SAVED_STTY=`stty -g`; stty -icanon -opost -echo -echoe -echok -echoctl -echoke; nc 127.0.0.1 4444; stty $SAVED_STTY'

# https://github.com/garabik/grc
